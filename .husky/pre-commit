
#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo '🏗️👷 Styling, testing and building your project before committing'

yarn  check-format ||
(
    echo '
    
    🤢🤮🤢🤮 #####################  PRETTIER  ################## 🤢🤮🤢🤮
    ❌❌❌❌❌❌❌       Prettier Check Failed.            ❌❌❌❌❌❌❌ 
    🤢🤮🤢🤮 #####################  PRETTIER  ################## 🤢🤮🤢🤮
            ';
    false;
)
echo ' '
echo '⌛⌛⌛Loading.......😅😅😅'
echo '⌛⌛⌛Loading.......😅😅😅'
echo '⌛⌛⌛Loading.......😅😅😅'
echo ' '
yarn check-lint ||
(
        echo '
        
        😤🏀👋😤 ###############      ESLINT    ################# 😤🏀👋😤 
        ❌❌❌❌❌❌❌       ESLint Check Failed.           ❌❌❌❌❌❌❌
        😤🏀👋😤 ###############      ESLINT    ################# 😤🏀👋😤 
                '
        false; 
)

echo ' '
echo '⌛⌛⌛Loading.......😅😅😅'
echo '⌛⌛⌛Loading.......😅😅😅'
echo '⌛⌛⌛Loading.......😅😅😅'
echo ' '
yarn check-types ||
(
    echo '

    🤡😂❌🤡 ################ TYPESCRIPT. ##################### 🤡😂❌🤡
    ❌❌❌❌❌❌ Are you seriously trying to write that? ❌❌❌❌❌❌❌
    🤡😂❌🤡 ################ TYPESCRIPT. ##################### 🤡😂❌🤡

            '
    false;
)

echo ' '
echo '⌛⌛⌛Loading.......😅😅😅'
echo '⌛⌛⌛Loading.......😅😅😅'
echo '⌛⌛⌛Loading.......😅😅😅'
echo ' '


sudo yarn test ||
(
    echo '

    🤡😂❌🤡 ################## TEST ################### 🤡😂❌🤡
    🤡😂❌🤡❌❌❌❌❌❌❌ Failed Test. ❌❌❌❌❌❌❌  🤡😂❌🤡
    🤡😂❌🤡 ################## TEST ################### 🤡😂❌🤡
       

        '
    false;
)

echo ' '
echo '⌛⌛⌛Loading.......😅😅😅'
echo '⌛⌛⌛Loading.......😅😅😅'
echo '⌛⌛⌛Loading.......😅😅😅'

echo ' '



echo ' '
echo ' '
echo '✨✨✨✅✅✅✅ 👻👻👻 .....I..👽...👻👻👻 ✅✅✅✅✨✨✨'
echo '✨✨✨✅✅✅✅ 👻👻👻 .....am..🧛...👻👻👻 ✅✅✅✅✨✨✨'
echo '✨✨✨✅✅✅✅ 👻👻👻 .committing🩸.👻👻👻 ✅✅✅✅✨✨✨'
echo '✨✨✨✅✅✅✅ 👻👻👻 ....this..👹...👻👻👻 ✅✅✅✅✨✨✨'
echo '✨✨✨✅✅✅✅ 👻👻👻 .....now.🎃....👻👻👻 ✅✅✅✅✨✨✨'
echo '🚀🚀🚀🚀🚀🚀🚀🚀🚀🚀🚀🚀 Done 💯  🚀🚀🚀🚀🚀🚀🚀🚀🚀🚀🚀🚀'
echo ' '
echo ' '